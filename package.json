{
  "name": "mdast-toc",
  "version": "0.2.0",
  "description": "Generate a Table of Contents (TOC) for Markdown files",
  "license": "MIT",
  "keywords": [
    "text",
    "markdown",
    "plain",
    "text",
    "table",
    "of",
    "contents",
    "content",
    "toc",
    "generation",
    "mdast"
  ],
  "dependencies": {
    "repeat-string": "^1.5.0",
    "slugg": "^0.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wooorm/mdast-toc.git"
  },
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "peerDependencies": {
    "mdast": ">=0.17.0"
  },
  "devDependencies": {
    "browserify": "^9.0.0",
    "chalk": "^1.0.0",
    "diff": "^1.2.2",
    "eslint": "^0.18.0",
    "esmangle": "^1.0.0",
    "istanbul": "^0.3.0",
    "jscs": "^1.0.0",
    "jscs-jsdoc": "^0.4.0",
    "mdast": "^0.17.0",
    "mdast-usage": "^0.2.0",
    "mocha": "^2.0.0",
    "slug": "^0.8.0",
    "to-slug-case": "^0.1.0"
  },
  "scripts": {
    "test-api": "mocha --check-leaks test/index.js",
    "test-coveralls": "istanbul cover _mocha --report lcovonly -- --check-leaks test/index.js",
    "test-coverage": "istanbul cover _mocha -- test/index.js",
    "test-travis": "npm run test-coveralls",
    "test": "npm run test-api",
    "lint-api": "eslint index.js",
    "lint-test": "eslint --env mocha test/index.js",
    "lint-script": "eslint example.js",
    "lint-style": "jscs --reporter inline index.js example.js test/index.js",
    "lint": "npm run lint-api && npm run lint-test && npm run lint-script && npm run lint-style",
    "make": "npm run lint && npm run test-coverage",
    "bundle": "browserify index.js --no-builtins -s mdastTOC > mdast-toc.js",
    "postbundle": "esmangle mdast-toc.js > mdast-toc.min.js",
    "build-md": "mdast . --output",
    "build-history": "mdast History.md --no-ignore --setting setext --output",
    "build": "npm run bundle && npm run build-md && npm run build-history",
    "prepublish": "npm run build"
  }
}
