{
  "name": "remark-toc",
  "version": "7.2.0",
  "description": "remark plugin to generate a Table of Contents (TOC)",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "mdast",
    "markdown",
    "text",
    "plain",
    "text",
    "table",
    "of",
    "contents",
    "content",
    "toc",
    "generation"
  ],
  "repository": "remarkjs/remark-toc",
  "bugs": "https://github.com/remarkjs/remark-toc/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Gary Katsevman <git@gkatsev.com>",
    "Jonathan Haines <jonno.haines@gmail.com>",
    "Robin Millette <robin@millette.info>"
  ],
  "types": "types/index.d.ts",
  "files": [
    "types/index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "@types/unist": "^2.0.3",
    "mdast-util-toc": "^5.0.0"
  },
  "devDependencies": {
    "dtslint": "^4.0.0",
    "is-hidden": "^1.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "remark": "^13.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "tape": "^5.0.0",
    "xo": "^0.38.0"
  },
  "scripts": {
    "format": "remark . -qfo --ignore-pattern test/ && prettier . -w --loglevel warn && xo --fix",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run test-coverage && npm run test-types"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/no-fn-reference-in-iterator": "off",
      "unicorn/prefer-optional-catch-binding": "off"
    },
    "ignores": [
      "types/"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
